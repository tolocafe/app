{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"alwaysStrict": true,
		"incremental": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"removeComments": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"types": ["jest", "node"]
	},
	"extends": "expo/tsconfig.base",
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"eslint.config.mjs"
	]
}
